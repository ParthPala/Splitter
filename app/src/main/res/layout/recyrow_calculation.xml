<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_recy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_recy_splitDetails"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="gabbar"
        android:layout_margin="@dimen/dimen_5"
        android:textSize="@dimen/dimen_15" />

    <TextView
        android:id="@+id/tv_recy_splitDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGold"
        app:layout_constraintStart_toEndOf="@id/tv_recy_name"
        app:layout_constraintEnd_toStartOf="@id/tv_recy_splitTotal"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/dimen_15"
        android:layout_margin="@dimen/dimen_5"
        tools:text="1+1+1+1 = "
        />

    <TextView
        android:id="@+id/tv_recy_splitTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGold"
        app:layout_constraintStart_toEndOf="@id/tv_recy_splitDetails"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dimen_5"
        android:textSize="@dimen/dimen_18"
        tools:text="50"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</HorizontalScrollView>